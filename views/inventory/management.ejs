<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <%} %>
    <%- messages() %>


<!-- Links to add new classification or inventory item -->
<div class="management">
    <a href="/inv/add-classification">Add New Classification</a>
    <br>
    <a href="/inv/add-inventory">Add New Vehicle</a>
</div>

<!-- Heading to manage inventory -->
<h2>Manage Inventory</h2>
<P> Choose a classification to see those inventory items.</P>
<%- dropdown %> 
<!-- Empty HTML table for displaying inventory items -->
<table id="inventoryDisplay"></table>

<select id="classification_id" name="classification_id" required>
    <option value="" disabled selected>Select a classification</option>
    <% classifications.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>">
            <%= classification.classification_name %>
        </option>
    <% }); %>
</select>

<!-- Add a script tag to include the JavaScript file -->
<noscript> JavaScript must be enable to use this page.</noscript>
<script src="../../js/inventory.js"></script>