<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<!-- Account Error Display -->
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<h3>You're logged in!</h3>

<div class="account-management">
  <!-- Display a "Welcome <account_name>" -->
  <h2 class="account-welcome">Welcome <%= locals.accountData.account_firstName %></h2>

  <br>

  <!-- Edit Account Information - Link -->
  <a title="Edit Account Information" href="/account/editAccount/<%= locals.accountData.account_id %>">Edit Account Information</a>
  <br>
  
  <!-- Conditional checks for account type -->
  <% if (locals.accountData) { %>
    <% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin" ) { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Access Inventory Management</a></p>
    <% } %>    
  <% } else { %>
      <p>You must be logged in to view this page.</p>
  <% } %>
</div>






